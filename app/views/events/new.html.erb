<% provide(:title, "Create new Event") %>
<h1>Create a new event</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event) do |f| %>
    <%= f.label :description %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.submit "Create event", class: "btn btn-primary" %>
    <% end%>
  </div>
</div>